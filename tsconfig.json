{
    "compilerOptions": {
        "outDir": "./src/scripts/js",
        "allowJs": true,
        "target": "es2017",
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "noImplicitUseStrict": true
    },
    "include": [
        "./src/**/*.ts",
        "./test/**/*.ts",
        "./deployment/server/editor.ts"
    ],
    "exclude": [
        "node_modules",
        "./src/deprecated",
    ],
    "awesomeTypescriptLoaderOptions": {
        "useCache": true
    }
}
